<Window x:Class="ApiTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="API Tester - Alternative to Postman" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#F0F0F0" Padding="5">
            <Button Content="New Collection" Command="{Binding NewCollectionCommand}" Style="{StaticResource ButtonStyle}"/>
            <Button Content="New Environment" Command="{Binding NewEnvironmentCommand}" Style="{StaticResource ButtonStyle}"/>
            <Separator Width="10" Background="Transparent"/>
            <TextBlock Text="Environment:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox ItemsSource="{Binding Environments}" 
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      MinWidth="150"
                      Style="{StaticResource ComboBoxStyle}"
                      SelectionChanged="Environment_SelectionChanged"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Grid Grid.Column="0" Background="#F8F8F8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <!-- Collections -->
                <TextBlock Grid.Row="0" Text="Collections" FontWeight="Bold" Margin="10" FontSize="14"/>
                <ListBox Grid.Row="1" ItemsSource="{Binding Collections}" 
                         DisplayMemberPath="Name" Margin="5"/>

                <!-- History -->
                <TextBlock Grid.Row="2" Text="History" FontWeight="Bold" Margin="10" FontSize="14"/>
                <ListBox Grid.Row="3" ItemsSource="{Binding RequestHistory}" 
                         DisplayMemberPath="Name" Margin="5"
                         MouseDoubleClick="History_MouseDoubleClick"/>
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#CCCCCC"/>

            <!-- Main Request Panel -->
            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Request Builder -->
                <StackPanel Grid.Row="0">
                    <!-- URL Bar -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0" 
                                  ItemsSource="{Binding AvailableMethods}"
                                  SelectedItem="{Binding SelectedMethod}"
                                  Style="{StaticResource ComboBoxStyle}"/>
                        
                        <TextBox Grid.Column="1" 
                                 Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"
                                 FontSize="14"/>
                        
                        <Button Grid.Column="2" 
                                Content="Send"
                                Command="{Binding SendRequestCommand}"
                                Style="{StaticResource ButtonStyle}"
                                FontWeight="Bold"
                                FontSize="14"/>
                        
                        <Button Grid.Column="3" 
                                Content="Save"
                                Command="{Binding SaveRequestCommand}"
                                Style="{StaticResource ButtonStyle}"/>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Button Content="Import from cURL" 
                                Click="ImportCurl_Click"
                                Style="{StaticResource ButtonStyle}"
                                Background="#28A745"/>
                        <Button Content="Clear Response"
                                Command="{Binding ClearResponseCommand}"
                                Style="{StaticResource ButtonStyle}"
                                Background="#DC3545"/>
                    </StackPanel>
                </StackPanel>

                <!-- Tabs for Request/Response -->
                <TabControl Grid.Row="1" Margin="0,10,0,0">
                    <!-- Headers Tab -->
                    <TabItem Header="Headers">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Format: Key: Value (one per line)" 
                                       Margin="5" FontStyle="Italic" Foreground="Gray"/>
                            <TextBox Grid.Row="1"
                                     Text="{Binding HeadersText, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     Margin="5"/>
                        </Grid>
                    </TabItem>

                    <!-- Body Tab -->
                    <TabItem Header="Body">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Request Body (JSON, XML, etc.)" 
                                       Margin="5" FontStyle="Italic" Foreground="Gray"/>
                            <TextBox Grid.Row="1"
                                     Text="{Binding RequestBody, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     Margin="5"/>
                        </Grid>
                    </TabItem>

                    <!-- Response Tab -->
                    <TabItem Header="Response">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#E8F4F8" Padding="5">
                                <TextBlock Text="Response:" FontWeight="Bold" Margin="5,0"/>
                            </StackPanel>

                            <TextBox Grid.Row="1"
                                     Text="{Binding ResponseBody, Mode=OneWay}"
                                     IsReadOnly="True"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     Margin="5"
                                     Background="#F5F5F5"/>
                        </Grid>
                    </TabItem>

                    <!-- Import cURL Tab -->
                    <TabItem Header="Import cURL">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Paste your cURL command here:" 
                                       Margin="5" 
                                       FontWeight="Bold"/>

                            <TextBox Grid.Row="1"
                                     Text="{Binding CurlImportText, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     Margin="5"/>

                            <Button Grid.Row="2"
                                    Content="Import"
                                    Command="{Binding ImportCurlCommand}"
                                    Style="{StaticResource ButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Background="#28A745"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusText}" 
                           Foreground="White"
                           FontWeight="Bold"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Loading..." 
                               Foreground="White"
                               Margin="10,0"
                               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
